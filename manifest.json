{
    "manifest_version": 2,
    "name": "Odissey easy share",
    "version": "1",
    "description": "Allows to easily share solutions URL's.",
    "icons": {
      "wcs": "./ressources/icon-WCS.png"
    },
    "background": {
      "persistent": false,
      "scripts": ["background_script.js"]
    },
    "permissions": ["https://*.google.com/", "activeTab"],
    "browser_action": {
      "default_icon": "./ressources/icon-WCS.png",
      "default_popup": "popup.html"
    }
  }