{
    "manifest_version": 2,
    "name": "Odissey easy share",
    "version": "1.0.1",
    "description": "Allows to easily share solutions URL's.",
    "icons": {
      "128": "./ressources/icon-WCS.png"
    },
    "permissions": [
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["https://*.odyssey.wildcodeschool.com/*"],
          "include_globs": ["*odyssey.wildcodeschool.com/*"],
          "run_at": "document_idle",
          "all_frames": true,
          "js": ["challenge.js"]
        }
    ]
}